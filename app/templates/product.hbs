{{#if controller.isEditing}}
    {{render "productEdit"}}
{{else}}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-9">
            <div class="well">
                <h2 class="text-info">{{model.name}}</h2>
                <p>
                    Category : <strong>{{model.category}}</strong>
                <hr>
                    SKU : <strong>{{model.sku}}</strong>
                <hr>
                </p>
                <p><a class="btn btn-default btn-lg" {{action startEditing}}><i class="icon-ok"></i> Edit</a></p>
            </div>
        </div>
    </div>
</div>
{{/if}}

